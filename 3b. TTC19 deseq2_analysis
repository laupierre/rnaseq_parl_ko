dds <- dds[keep,]
dds

dds$condition <- relevel(dds$condition, ref = "WT")

dds <- DESeq(dds)
resultsNames(dds)

res <- results(dds, name= "condition_KO_vs_WT")

res <- merge (data.frame (res), round (counts(dds, norm=TRUE)), by="row.names")
